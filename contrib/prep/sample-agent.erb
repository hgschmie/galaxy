#
# Configuration for Agent <%= @slot %>
#
galaxy.agent.console:            http://<%= @hostname %>:4442
galaxy.agent.agent_url:          druby://<%= @hostname %>:<%= @rc_agent_port.get %>
galaxy.agent.agent_group:        development
galaxy.agent.agent_id:           <%= @host_prefix %>-<%= @slot %>
galaxy.agent.machine:            <%= @hostname %>
galaxy.agent.slot_environment:   <%= @config_dir %>/slotinfo-<%= @slot %>
galaxy.agent.deploy-dir:         <%= @deploy_dir %>/<%= @slot %>
galaxy.agent.data-dir:           <%= @config_dir %>/data-<%= @slot %>
galaxy.agent.log:                SYSLOG
galaxy.agent.log-level:          INFO
galaxy.agent.pid-file:           <%= @base %>/agent-<%= @slot %>.pid
galaxy.agent.announce-interval:  5
galaxy.agent.user:               <%= @user %>
galaxy.agent.tmp_dir:            <%= @tmp_dir %>/galaxy/<%= @slot %>
galaxy.agent.persistent_dir:     <%= @persistent_dir %>/<%= @slot %>

#
# sample settings for HTTP
# 
# galaxy.agent.http_user:          config-user
# galaxy.agent.http_password:      config-password
# galaxy.agent.config-root:        http://some.server/config
# galaxy.agent.binaries-root:      http://some.server/binaries

#
# sample settings for local development with deployment from maven.
#
galaxy.agent.config-root:        <%= @home %>/devel/config
galaxy.agent.binaries-root:      <%= @home %>/.m2/repository
